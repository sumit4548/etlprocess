<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="reader" class="org.springframework.batch.item.file.FlatFileItemReader">
		<property name="resource"
			value="/Users/sumitagrawal/SoftwareAndSetup/BigFile/product.txt"></property>
		<property name="linesToSkip" value="1" />
		<property name="lineMapper">
			<bean class="org.springframework.batch.item.file.mapping.DefaultLineMapper">
				<property name="lineTokenizer">
					<bean
						class="org.springframework.batch.item.file.transform.DelimitedLineTokenizer">
						<property name="names" value="PRODUCT_ID,NAME,DESCRIPTION,PRICE" />
					</bean>
				</property>
				<property name="fieldSetMapper">
					<bean
						class="com.sumit.learning.springbatch.etlprocess.mapper.ProductFieldSetMapper" />
				</property>
			</bean>
		</property>
	</bean>
	<bean id="writer"
		class="com.sumit.learning.springbatch.etlprocess.model.util.ProductJdbcItemWriter">
		<constructor-arg ref="dataSource" />
	</bean>
</beans>
